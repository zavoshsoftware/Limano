@model CompanyBaseSite.ViewModels.BlogListViewModel

@{
	ViewBag.Title = "Contact";
	Layout = "~/Views/Shared/FrontEnd/_FronEndLayout.cshtml";
}
@section head{
	<style>
		input[type=text], textarea {
			text-align: right;
			direction: rtl;
		}
	</style>
}

<div class="wt-bnr-inr overlay-wraper bg-center" style="background-image:url(/Content/FrontEnd/images/banner/3.jpg);">
	<div class="overlay-main site-bg-secondry opacity-07"></div>
	<div class="container">
		<div class="wt-bnr-inr-entry">
			<div class="banner-title-outer">
				<div class="banner-title-name">
					<h2 class="site-text-primary">مقالات</h2>
				</div>
			</div>
			<!-- BREADCRUMB ROW -->

			<div>
				<ul class="wt-breadcrumb breadcrumb-style-2">
					<li><a href="javascript:void(0);">خانه</a></li>
					<li>مقالات</li>
				</ul>
			</div>

			<!-- BREADCRUMB ROW END -->
		</div>
	</div>
</div>
<div class="section-full  p-t80 p-b80 bg-orange-light">
	<div class="section-content">
		<div class="container">
			<div class="row d-flex justify-content-center">
				@foreach (var blog in Model.Blogs)
				{
						 

					<div class="col-lg-4 col-md-6 col-sm-12">
						<!--Block two-->
						<div class="blog-post date-style-2">
							<div class="wt-post-media wt-img-effect zoom-slow">
								<a href="/blog/post/@blog.UrlParam"><img src="@blog.ImageUrl" alt="@blog.Title"></a>
							</div>
							<div class="wt-post-info bg-white p-a20 p-b0 text-center">
								<div class="wt-post-meta ">
									<ul>
										<li class="post-date"><span> @blog.CustomeCreationDate</span> </li>
									</ul>
								</div>
								<div class="wt-post-title ">
									<h3 class="post-title"><a href="/blog/post/@blog.UrlParam" class="site-text-primary">@blog.Title</a></h3>
								</div>
								<div class="wt-post-readmore ">
									<a href="/blog/post/@blog.UrlParam" class="site-button-link black">بیشتر بخوانید</a>
								</div>
							</div>
						</div>
					</div>
				}

			</div>
		</div>
	</div>
</div>